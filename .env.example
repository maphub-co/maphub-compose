# Hosts (SSL certificates will be automatically generated)
FRONT_DOMAIN=maphub.example.com
API_DOMAIN=maphub-api.example.com
AUTH_DOMAIN=maphub-auth.example.com

CONTAINER_SOCK=/var/run/docker.sock
LETSENCRYPT_EMAIL=someone@example.com

# FRONTEND
FRONT_AUTH_SECRET=replace_with_random_32_chars
MAPBOX_TOKEN=replace_with_mapbox_token

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin
POSTGRES_DB=maphub

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_SECURE=false
DATA_BUCKET=maphub-data

# Keycloak realm and client
AUTH_PROVIDER=keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_REALM=maphub
KEYCLOAK_CLIENT_ID=maphub-front

# SMTP (leave empty â†’ email features off)
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_PORT=
MAIL_SERVER=
MAIL_USE_TLS=
MAIL_USE_SSL=
MAIL_FROM=maphub@example.com
MAIL_FROM_NAME='MapHub Notifications'
